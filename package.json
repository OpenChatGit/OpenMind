{
  "name": "modern_chat_app",
  "private": true,
  "version": "0.5.1",
  "main": "electron/main.js",
  "build": {
    "appId": "com.openmind.app",
    "productName": "OpenMind",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "models/**/*",
      "plugins/**/*",
      "ollama/**/*",
      "!python/.venv/**/*",
      "!python/.venv",
      "!**/.venv/**/*",
      "!**/node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": ["**/*", "!.venv/**/*", "!.venv"]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "mac": {
      "target": "dmg"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "setup:python": "node scripts/setup-python.js",
    "setup:llmlingua": "node scripts/setup-llmlingua.js",
    "postinstall": "node scripts/setup-python.js"
  },
  "dependencies": {
    "@homebridge/node-pty-prebuilt-multiarch": "^0.13.1",
    "@huggingface/hub": "^2.7.0",
    "@lobehub/icons": "^2.45.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@monaco-editor/react": "^4.7.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.0",
    "file-icons-js": "^1.1.0",
    "form-data": "^4.0.5",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.554.0",
    "node-fetch": "^2.7.0",
    "node-llama-cpp": "^3.14.4",
    "ollama": "^0.6.3",
    "prism-react-renderer": "^2.4.1",
    "puppeteer-core": "^24.31.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-file-icon": "^1.6.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.5.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "seti-ui": "^1.11.0",
    "shiki": "^3.17.0",
    "three": "^0.181.2",
    "vscode-icons-js": "^11.6.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "npm:rolldown-vite@7.2.5",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
